<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg_login1"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="62.0dp"
        android:layout_marginRight="62.0dp"
        android:layout_marginTop="85dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_u"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/login_account_et"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#000"
                android:drawableLeft="@mipmap/icon_login_mobile"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:hint="请输入登陆账号"
                android:paddingLeft="5dp"
                android:textColor="#888888"
                android:textColorHint="#fff"
                android:textSize="14.0dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_u"
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_alignParentBottom="true"
            android:background="#EDEDED" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="62.0dp"
        android:layout_marginRight="62.0dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_p"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/login_password_et"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#000"
                android:drawableLeft="@mipmap/icon_login_lock"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:hint="请输入登陆密码"
                android:paddingLeft="5dp"
                android:password="true"
                android:textColor="#888888"
                android:textColorHint="#fff"
                android:textSize="14.0dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_p"
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_alignParentBottom="true"
            android:background="#EDEDED" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_findpassword"
        android:layout_width="fill_parent"
        android:layout_height="30.0dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="5.0dp"
        android:gravity="right"
        android:text="没有账号？注册一个"
        android:textColor="#ffffff"
        android:textSize="9sp" />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="200.0dp"
        android:layout_height="40.0dp"
        android:layout_gravity="center_horizontal"
        android:background="#80ffffff"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>