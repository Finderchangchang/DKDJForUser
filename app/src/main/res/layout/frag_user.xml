<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/user_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logined_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27.0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_my_icon"
                android:layout_width="80.0dp"
                android:layout_height="80.0dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/user_icon"></ImageView>

            <TextView
                android:id="@+id/username_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7.0dp"
                android:gravity="center"
                android:text="登录/注册"
                android:textColor="@android:color/white"
                android:textSize="20.0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dp"
                    android:layout_weight="1"
                    android:drawablePadding="2.5dp"
                    android:drawableTop="@mipmap/qianbao2"
                    android:gravity="center_horizontal"
                    android:text="余额"
                    android:textColor="#fff"
                    android:textSize="12.5dp" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="24.5dp" />

                <TextView
                    android:id="@+id/tv_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="0dp"
                    android:text="元"
                    android:textColor="#fff"
                    android:textSize="15.0dp" />

                <TextView
                    android:id="@+id/tv_duanxian1"
                    android:layout_width="0.5dp"
                    android:layout_height="50.0dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5.0dp"
                    android:background="#eeeeee" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_n_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dp"
                    android:layout_weight="1"
                    android:drawablePadding="2.5dp"
                    android:drawableTop="@mipmap/icon_daijinquanda"
                    android:gravity="center_horizontal"
                    android:text="代金券"
                    android:textColor="#fff"
                    android:textSize="12.5dp" />

                <TextView
                    android:id="@+id/tv_number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="24.5dp" />

                <TextView
                    android:id="@+id/tv_juange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="10.0dp"
                    android:text="个"
                    android:textColor="#fff"
                    android:textSize="15.0dp" />

                <TextView
                    android:id="@+id/tv_duanxian2"
                    android:layout_width="0.5dp"
                    android:layout_height="50.0dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5.0dp"
                    android:background="#eeeeee" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/mLayoutBookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:layout_weight="1"
                    android:drawablePadding="2.5dp"
                    android:drawableTop="@mipmap/shoucang2"
                    android:gravity="center_horizontal"
                    android:text="收藏店铺"
                    android:textColor="#fff"
                    android:textSize="12.5dp" />

                <TextView
                    android:id="@+id/tv_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="24.5dp" />

                <TextView
                    android:id="@+id/tv_shopge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5.0dp"
                    android:text="个"
                    android:textColor="#fff"
                    android:textSize="15.0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_kong"
        android:layout_width="fill_parent"
        android:layout_height="10.0dp"
        android:background="#eeeeee" />

    <TextView
        android:id="@+id/tv_line1_sys"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_remind"
            android:layout_width="0dp"
            android:layout_height="106.5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tixingda"
            android:gravity="center"
            android:paddingBottom="5.0dp"
            android:paddingTop="10.0dp"
            android:text="消息提醒"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_vline1_sys"
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/tv_myaddress"
            android:layout_width="0dp"
            android:layout_height="106.5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/dingwei"
            android:gravity="center"
            android:paddingBottom="5.0dp"
            android:paddingTop="10.0dp"
            android:text="我的地址"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_vline2_sys"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/tv_myevaluate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/xiaoxida"
            android:gravity="center"
            android:paddingBottom="5.0dp"
            android:paddingTop="10.0dp"
            android:text="我的评价"
            android:textColor="#333333" />
    </LinearLayout>
</LinearLayout>
